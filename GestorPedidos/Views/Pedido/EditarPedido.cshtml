@{
    Layout = "_UsuarioLayout";
    ViewData["Title"] = "Editar Pedido";
}
<div>
    <div class="volver mb-3 row">
        <div class="col">
            <a asp-controller="Pedido" asp-action="Pedido" class="mx-1">
                <i class="fas fa-long-arrow-alt-left"></i> Volver
            </a>
        </div>
    </div>
    <div class="py-2 titulos-paginas">
        <h3>Editar pedido</h3>
    </div>

    <div class="row nuevo-pedido">
        <div class="col-12 col-md-6 mt-3">
            <div class="mb-3">
                <label class="form-label-group text-uppercase">Cliente</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>-</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>

            <div class="mb-2">
                <label class="form-label-group text-uppercase">Articulo</label>
                <select class="form-select" aria-label="Default select example">
                    <option selected>-</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btn-outline-dark text-uppercase">Agregar a la lista</button>
            </div>
        </div>
        <div class="hr-pedido">
            <hr />
        </div>
        <div class="col-12 col-md-6 mt-3">
            <p class="text-uppercase">Carrito</p>
            <div class="table-responsive ">
                <table id="" class="table table-striped" style="width:100%">
                    <thead class="bg-dark text-light">
                        <tr>
                            <th class="text-center">Descripcion</th>
                            <th class="text-center">Codigo</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-center">Ver</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">Coca Cola</td>
                            <td class="text-center">A122</td>
                            <td class="text-center">1</td>
                            <td class="text-center">
                                <span data-bs-toggle="tooltip" data-placement="top" title="Ver articulo"><i class="fas fa-info btn"></i></span> |
                                <span data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar del carrito"> <i class="fas fa-times btn text-danger"></i></span>
                            </td>

                        </tr>
                        <tr>
                            <td class="text-center">Pepsi</td>
                            <td class="text-center">B2B1</td>
                            <td class="text-center">2</td>
                            <td class="text-center">
                                <span data-bs-toggle="tooltip" data-placement="top" title="Ver articulo"><i class="fas fa-info btn"></i></span> |
                                <span data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar del carrito"> <i class="fas fa-times btn text-danger"></i></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <label for="exampleFormControlTextarea1" class="form-label text-uppercase">Comentarios</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="d-none row my-2 pedido-pc">
                <div class="col-4">
                    <div class="d-flex justify-content-start">
                        <button class="btn btn-outline-secondary text-uppercase">Cancelar</button>
                    </div>
                </div>
                <div class="col-4">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-outline-danger text-uppercase">Borrar</button>
                    </div>
                </div>
                <div class="col-4">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-outline-success text-uppercase">Modificar</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row my-2 pedido-phone">
        <div class="col-4 col-md-4">
            <div class="d-flex justify-content-start">
                <button class="btn btn-outline-secondary text-uppercase">Cancelar</button>
            </div>
        </div>
        <div class="col-4 col-md-4">
            <div class="d-flex justify-content-end">
                <button class="btn btn-outline-danger text-uppercase">Borrar</button>
            </div>
        </div>
        <div class="col-4 col-md-4">
            <div class="d-flex justify-content-end">
                <button class="btn btn-outline-success text-uppercase">Modificar</button>
            </div>
        </div>
    </div>


</div>