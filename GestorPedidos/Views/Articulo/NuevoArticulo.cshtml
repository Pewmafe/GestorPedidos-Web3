@using Newtonsoft.Json;
@model Models.Models.Articulo;
@{
    Layout = "_UsuarioLayout";
    ViewData["Title"] = "Nuevo Articulo";
  

}

<div>
    @if (TempData["art"] != null)
    {
        <h4>
            Artículo @(JsonConvert.DeserializeObject<Models.Models.Articulo>
            (TempData["art"].ToString()).Codigo)
            @(JsonConvert.DeserializeObject<Models.Models.Articulo>
                (TempData["art"].ToString()).Descripcion)
            creado con éxito
        </h4>
    }
</div>
<div>
    <div class="volver mb-3 row">
        <div class="col">
            <a asp-controller="Articulo" asp-action="Articulos" class="mx-1">
                <i class="fas fa-long-arrow-alt-left"></i> Volver
            </a>
        </div>
    </div>
    <div class="py-2 titulos-paginas">
        <h3>Nuevo articulo</h3>
    </div>
    <form class="nuevo-articulo" asp-action="NuevoArticulo" asp-controller="Articulo" method="post">
        <div class="mb-3">
            <label for="Codigo" class="form-label text-uppercase">Código:</label>
            <input type="text" asp-for="Codigo" value="" class="form-control" />
            <span asp-validation-for="Codigo" class="text-danger fst-italic text-uppercase"></span>
        </div>
        <div class="mb-3">
            <label for="Descripcion" class="form-label text-uppercase">Descripción:</label>
            <input type="text" asp-for="Descripcion" value="" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger fst-italic text-uppercase"></span>
           
        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-outline-success text-uppercase" value="Guardar" name="guardar" />
            <input type="submit" class="btn btn-outline-success text-uppercase" value="Guardar y Crear otro" name="guardarotro" />
            <a class="btn btn-outline-warning" asp-controller="Articulo" asp-action="Articulos">Cancelar</a>
        </div>
    </form>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}
