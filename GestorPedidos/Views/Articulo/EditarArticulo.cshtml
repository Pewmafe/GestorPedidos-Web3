@model Models.Models.Articulo;
@{
    ViewData["Title"] = "Editar Artículo";
}


<h1 class="text-center">Editar Artículo</h1>
<div class="d-flex justify-content-center">
    <form asp-action="EditarArticulo" asp-controller="Articulo" method="post">
        
            <input type="hidden" asp-for="IdArticulo" value="@Model.IdArticulo" />
            
        <div class="col-md-12">
            <label for="Codigo" class="form-label">Código:</label>
            <input type="text" asp-for="Codigo" value="@Model.Codigo" class="form-control" />
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label for="Descripcion" class="form-label">Descripción:</label>
            <input type="text" asp-for="Descripcion" value="@Model.Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" class="btn btn-success" value="Editar" />
            <a class="btn btn-danger" href="/Articulo/EliminarArticulo?IdArticulo=@Model.IdArticulo" >Eliminar</a>
            <a class="btn btn-warning" asp-controller="Articulo" asp-action="Articulos">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial.cshtml" />
}
