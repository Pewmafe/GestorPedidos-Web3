@using Newtonsoft.Json;
@model List<Models.Models.Articulo>;
@{
    ViewData["Title"] = "Articulos";
}
<div>
    @if (TempData["art"] != null)
    {
        <h4>
            Artículo @(JsonConvert.DeserializeObject<Models.Models.Articulo>
            (TempData["art"].ToString()).Codigo)
            @(JsonConvert.DeserializeObject<Models.Models.Articulo>
                (TempData["art"].ToString()).Descripcion)
            creado con éxito
        </h4>
    }
</div>
<h1>Artículos</h1>

<div>
    <a class="btn btn-primary" asp-controller="Articulo" asp-action="NuevoArticulo">Nuevo Artículo</a>
</div>

<div>
    <form asp-controller="Articulo" asp-action="FiltrarArticulo" method="get">
        <select name="codigo">
            <option>Codigo</option>
            <option>-</option>
        </select>
        <select name="descripcion">
            <option>Descripcion</option>
        </select>
        <div>
            <label> Excluir Eliminados:</label>
            <input type="checkbox" value="Excluir eliminados" name="noEliminados" selected />
        </div>

        <input type="submit" value="Filtrar" class="btn btn-primary"/>
    </form>
</div>
<div class="table-responsive text-center">
    <table class="table table-bordered table-dark">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Descripción</th>
                <th scope="col">Código</th>
                <th scope="col">Ver</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Rosca con tuerca 1/2 bronce</td>
                <td>1000/01</td>
                <td><a href="#" class="btn btn-warning text-light">Ver</a></td>
                <td> <a href="#" class="btn btn-danger text-light">Eliminar</a></td>

            </tr>
            <tr>
                <td>Rosca con tuerca 3/4 bronce </td>
                <td>1000/02</td>
                <td><a href="#" class="btn btn-warning text-light">Ver</a></td>
                <td> <a href="#" class="btn btn-danger text-light">Eliminar</a></td>
            </tr>

        </tbody>
    </table>
</div>
