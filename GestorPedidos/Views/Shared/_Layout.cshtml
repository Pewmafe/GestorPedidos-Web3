<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <title>@ViewData["Title"] - GestorPedidos</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.css">
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body id="body-pd">

    <header class="header" id="header">
        <div class="header__toggle">
            <i class="fas fa-bars" id="header-toggle"></i>
        </div>

        <div class="header__img">
            <img src="assets/img/perfil.jpg" alt="Imagen de perfil">
        </div>
    </header>
    <div class="sidebar-main">
        <div class="l-navbar" id="nav-bar">
            <nav class="nav">
                <div>

                    <a asp-controller="Home" asp-action="Index" class="nav__logo">
                        <i class="fas fa-home"></i>
                        <span class="nav__logo-name">Inicio</span>
                    </a>

                    <div class="nav__list">
                        <a asp-controller="User" asp-action="Usuarios" class="nav__link">
                            <i class="fas fa-user"></i>
                            <span class="nav__name">Usuarios</span>
                        </a>

                        <a asp-controller="Pedido" asp-action="pedido" class="nav__link">
                            <i class="fas fa-shopping-bag"></i>
                            <span class="nav__name">Pedidos</span>
                        </a>

                        <a asp-controller="Cliente" asp-action="Clientes" class="nav__link">
                            <i class="fas fa-id-card"></i>
                            <span class="nav__name">Clientes</span>
                        </a>

                        <a asp-controller="Articulo" asp-action="Articulos" class="nav__link">
                            <i class="fas fa-tags"></i>
                            <span class="nav__name">Artículos</span>
                        </a>

                        <a asp-controller="Login" asp-action="Login" class="nav__link">
                            <i class="fas fa-sign-in-alt"></i>
                            <span class="nav__name">Login</span>
                        </a>
                    </div>
                </div>

                <a asp-controller="Login" asp-action="Logout" class="nav__link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span class="nav__name">Log Out</span>
                </a>
            </nav>
        </div>
    </div>
    <main role="main" class="pb-3">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top text-center ">
        <p class="text-dark">
            &copy; 2021 - GestorPedidos - Santiago Fagliano - Matias Sanchez - Brenda Daffunchio - Matias Van Der Beken
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>